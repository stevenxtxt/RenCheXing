<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navi_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navi_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="top"
        android:orientation="vertical" >
        <com.xgr.wonderful.view.RoundImageView 
            android:id="@+id/iv_navi_personalsetting"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/user_photo"
            android:layout_gravity="center_horizontal"/>
		<TextView
            android:id="@+id/tv_navi_main"
            style="@style/navitext"
            android:drawableLeft="@drawable/ic_navi_home"
            android:text="主页"
            android:drawablePadding="15dp"
            android:textColor="#4c4c4c"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tv_navi_settings"
            style="@style/navitext"
            android:drawableLeft="@drawable/ic_navi_settings"
            android:text="设置"
            android:drawablePadding="15dp"
            android:textColor="#4c4c4c"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_navi_feedback"
            style="@style/navitext"
            android:drawableLeft="@drawable/ic_navi_feedback"
            android:text="收藏" 
            android:drawablePadding="15dp"
            android:textColor="#4c4c4c"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tv_navi_intro"
            style="@style/navitext"
            android:drawableLeft="@drawable/ic_navi_intro"
            android:text="推荐" 
            android:drawablePadding="15dp"
            android:textColor="#4c4c4c"
            android:textSize="24sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_navi_about"
            style="@style/navitext"
            android:drawableLeft="@drawable/ic_navi_about"
            android:text="关于"
            android:drawablePadding="15dp"
            android:textColor="#4c4c4c"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>